<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/authbackground2"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".display.SplashActivity">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="120dp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/cardlogo_ico" />

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_splash_logo"
        android:layout_marginTop="28dp"
        android:src="@drawable/deja_vu_title"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_welcome"
        android:layout_marginTop="20dp"
        android:id="@+id/progressbar_splash"
        android:progressTint="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:max="100"
        android:progress="45"/>

