<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".display.HomeActivity">


    <ImageView
        android:id="@+id/iv_home_logo"
        android:layout_width="141dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/cardlogo_ico" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="225dp"
        android:drawableLeft="@drawable/icon_satisfied"
        android:drawableRight="@drawable/icon_play"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_home_logo"
        android:text="PLAY"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="225dp"
        android:drawableLeft="@drawable/icon_satisfied"
        android:drawableRight="@drawable/icon_person"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_play"
        android:text="LOGIN"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/btn_play_guide"
        android:layout_width="225dp"
        android:drawableLeft="@drawable/icon_satisfied"
        android:drawableRight="@drawable/icon_help"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_login"
        android:text="HOW TO PLAY"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_sound"
        android:layout_width="225dp"
        android:drawableLeft="@drawable/icon_satisfied"
        android:drawableRight="@drawable/icon_volume_up"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_play_guide"
        android:text="SOUND"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/btn_quit"
        android:layout_width="225dp"
        android:drawableLeft="@drawable/icon_satisfied"
        android:drawableRight="@drawable/icon_quit"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_sound"
        android:text="QUIT"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
